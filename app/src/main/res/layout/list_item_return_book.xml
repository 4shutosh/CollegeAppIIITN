<?xml version="1.0" encoding="utf-8"?>
<layout>

    <androidx.appcompat.widget.LinearLayoutCompat
        xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="8dp"
        android:layout_marginTop="8dp"
        android:background="@drawable/dr_rounded_16"
        android:backgroundTint="@color/colorCloseToSurface_1"
        android:orientation="vertical">

        <com.google.android.material.textview.MaterialTextView
            android:id="@+id/tv_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="12dp"
            android:layout_marginTop="18dp"
            android:drawableStart="@drawable/ic_library_collection"
            android:drawablePadding="10dp"
            android:drawableTint="@color/textColorPrimary"
            android:fontFamily="@font/google_sans_regular"
            android:gravity="center"
            android:includeFontPadding="false"
            android:text="@string/return_book"
            android:textColor="@color/textColorPrimary"
            android:textSize="24sp" />

        <com.google.android.material.textview.MaterialTextView
            android:id="@+id/tv_description"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="30dp"
            android:layout_marginVertical="18dp"
            android:fontFamily="@font/google_sans_regular"
            android:gravity="start"
            android:includeFontPadding="false"
            android:text="@string/return_book_description"
            android:textColor="@color/textColorPrimary"
            android:textSize="18sp" />

    </androidx.appcompat.widget.LinearLayoutCompat>
</layout>