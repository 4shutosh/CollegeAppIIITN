<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:orientation="horizontal"
    android:paddingVertical="@dimen/five_dp">

    <ImageView
        android:id="@+id/view"
        android:layout_width="80dp"
        android:layout_height="3dp"
        android:layout_marginHorizontal="@dimen/tenDp"
        android:layout_marginTop="22dp"
        android:contentDescription="@string/authBar"
        android:src="@drawable/horizontal" />

    <ImageView
        android:id="@+id/google_icon"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:contentDescription="@string/authBar"
        android:paddingVertical="@dimen/tenDp"
        android:paddingHorizontal="24dp"
        android:src="@drawable/google_icon_color" />

    <ImageView
        android:id="@+id/view2"
        android:layout_width="80dp"
        android:layout_height="3dp"
        android:layout_marginTop="22dp"
        android:layout_marginHorizontal="@dimen/tenDp"
        android:contentDescription="@string/authBar"
        android:src="@drawable/horizontal" />

</LinearLayout>