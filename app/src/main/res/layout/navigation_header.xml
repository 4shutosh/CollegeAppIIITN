<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="200dp"
    android:background="@color/colorOnSurface"
    android:gravity="bottom"
    android:orientation="vertical"
    android:padding="16dp">


    <com.google.android.material.card.MaterialCardView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:cardBackgroundColor="@android:color/transparent"
        android:outlineProvider="background"
        app:cardCornerRadius="@dimen/tenDp">

        <ImageView
            android:id="@+id/navigation_drawer_userImage"
            android:layout_width="65dp"
            android:layout_height="65dp"
            android:src="@drawable/user_image_demo" />
    </com.google.android.material.card.MaterialCardView>

    <TextView
        android:textColor="@color/colorSurface"
        android:id="@+id/navigation_drawer_username"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:paddingTop="8dp"
        android:text="@string/username"
        android:textSize="15sp" />

    <!-- add roll number if possible-->

    <TextView
        android:textColor="@color/colorSurface"
        android:id="@+id/navigation_drawer_email"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:paddingTop="4dp"
        android:text="@string/example_email"
        android:textSize="15sp" />

</LinearLayout>